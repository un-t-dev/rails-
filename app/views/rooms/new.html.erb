<div class="room_container">
  <h3>ルーム情報登録</h3>

  <%= form_with model: @room, url: rooms_path do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="room">
      <%= f.label :listing_name, "ルーム名", class:"bold" %><br>
      <%= f.text_field :listing_name, class:"input_field", placeholder: "ルーム名を入力" %>
    </div> 
    <div class="registration">
      <%= f.label :room_type, "ルーム紹介", class:"bold" %><br>
      <%= f.text_field :room_type, class:"wide_field", placeholder: "ルームの説明を入力" %>
    </div>
    <div class="registration">
      <%= f.label :price, "料金", class:"bold" %><br>
      <%= f.number_field :price, class:"input_field", placeholder: "１日あたりの料金を入力"  %>
    </div>
    <div class="registration">
      <%= f.label :address, "住所", class:"bold" %><br>
      <%= f.text_field :address, class:"input_field", placeholder: "住所を入力" %>
    </div>
    <div class="registration">
      <%= f.label :room_image, "ルーム画像", class:"bold" %><br>
      <%= f.file_field :room_image, class:"input_field" %>
    </div>
    <div class="registration">
      <%= f.submit "登録", class: "submit" %>
    </div>
  <% end %>

</div>